<h1>Movies</h1>


<div class="">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <img width="150px" src="<%= bookmark.movie.poster_url %>" alt="movie poster">
      <h3><strong>Title:</strong> <%= bookmark.movie.title %></h3>
      <p>Overview: <%= bookmark.movie.overview %></p>
      <p>Rating: <%= bookmark.movie.rating %> ‚≠ê</p>
      <p>Comment: <%= bookmark.comment %></p>
        </div>
      <% end %>
  </div>
</div>

<ul class="list-group list-group-flush">
  <li><%= link_to 'Add a movie', new_list_bookmark_path(@list) %></li>
  <li><%= link_to 'Delete list', list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure"} %></li>
  <li><%= link_to 'Back to lists', lists_path %></li>
</ul>
